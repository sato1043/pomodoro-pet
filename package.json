{
  "name": "pomodoro-pet",
  "version": "0.1.0",
  "description": "3Dバーチャルペット型ポモドーロタイマー",
  "author": "sato1043@updater.cc",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-vite build && electron-builder --win",
    "package:dir": "electron-vite build && electron-builder --win --dir",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy:local": "rm -rf /mnt/c/temp/pomodoro-pet && mkdir -p /mnt/c/temp/pomodoro-pet && cp -r release/win-unpacked/* /mnt/c/temp/pomodoro-pet/ && cmd.exe /c 'C:\\temp\\pomodoro-pet\\Pomodoro Pet.exe'",
    "icon": "convert build/icon.png \\( +clone -resize 256x256 -sharpen 0x0.5 \\) \\( +clone -resize 128x128 -sharpen 0x0.8 \\) \\( +clone -resize 64x64 -sharpen 0x1.0 \\) \\( +clone -resize 48x48 -sharpen 0x1.2 \\) \\( +clone -resize 32x32 -sharpen 0x1.5 \\) \\( +clone -resize 16x16 -sharpen 0x2.0 \\) -delete 0 build/icon.ico"
  },
  "build": {
    "appId": "com.pomodoro-pet.app",
    "productName": "Pomodoro Pet",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "three": "^0.170.0"
  },
  "devDependencies": {
    "@types/three": "^0.170.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^5.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  }
}
