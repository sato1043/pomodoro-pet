{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./out"
  },
  "include": [
    "desktop/**/*.ts",
    "electron.vite.config.ts",
    "vitest.config.ts"
  ]
}
